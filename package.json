{
  "name": "sketch-textbox-fit-content",
  "version": "1.3.0",
  "description": "This plugin sets the height of a selected text layer or all text layers in a selected group to it's content's height.",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "Text box fit content",
    "manifest": "src/manifest.json",
    "main": "sketch-textbox-fit-content.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juliussohn/sketch-textbox-fit-content.git"
  },
  "devDependencies": {
    "@skpm/builder": "^0.4.0"
  },
  "author": "Julius Sohn <juliussohn@icloud.com>"
}
